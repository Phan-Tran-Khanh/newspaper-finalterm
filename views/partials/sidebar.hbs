<!-- Logged in Sidebar -->
{{#with user}}
<div class="offcanvas offcanvas-end text-bg-dark" data-bs-scroll="true" tabindex="-1" id="offcanvasLoggedin"
  aria-labelledby="offcanvasLoggedinLabel">
  <div class="offcanvas-header">
    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body">
    <ul class="list-unstyled ms-3">
      <li class="mb-3">
        <a href="#" class="link-light" data-bs-toggle="modal" data-bs-target="#modalUserInformation">
          <img id="account-avatar" class="rounded-circle object-fit-cover border border-light border-4" style="width: 50px; height: 50px;"
            src="{{avatarUrl}}">
          <span id="account-name">{{firstName}} {{lastName}}</span>
        </a>
      </li>
      {{#ifEquals role.name 'Writer'}}
      <li class="mb-3">
        <a href="/writer/" class="link-light">
          <i class="bi bi-pencil-square"></i> Submit Article
        </a>
      </li>
      <li class="mb-3">
        <a href="/writer/search" method="get" class="link-light">
          <i class="bi bi-newspaper"></i> My Submitted Articles
        </a>
      </li>
      {{/ifEquals}}
      {{#ifEquals role.name 'Editor'}}
      <li class="mb-3">
        <a href="/editor/list" method="get" class="link-light">
          <i class="bi bi-newspaper"></i> Draft Articles
        </a>
      </li>
      {{/ifEquals}}
      {{#ifEquals role.name 'Admin'}}
      <li class="mb-3">
        <a href="/admin/" method="get" class="link-light">
          <i class="bi bi-newspaper"></i> Dashboard
        </a>
      </li>
      {{/ifEquals}}
      <li class="mb-3">
        <a href="#footer" class="link-light">
          <i class="bi bi-people"></i> About us
        </a>
      </li>
      <li class="mb-3">
        <form id="logout-form" action="/auth/logout" method="post">
          <a href="#" class="link-light" id="logout-btn" data-bs-dismiss="offcanvas" aria-label="Log out">
            <i class="bi bi-box-arrow-left"></i> Log out
          </a>
        </form>
      </li>
    </ul>
  </div>
</div>
{{/with}}
<!-- Logged in Sidebar -->