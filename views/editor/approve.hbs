<body class="container-fluid">
  <div class="e_Approve container">
    <div class="approve-area">
      <div class="approve header h2">
        <span><strong>XUẤT BẢN TRỰC TUYẾN</strong></span>
      </div>
      <div class="approve-content">
        <div class="approve-c text">
          <div class="approve-r datetime">
            <label for="a-datetime">Datetime</label>
            <div class='input-group date' id='a-datetime'>
              <input class="form-control" type="datetime-local" id="approve-publishedAt">
              <script>
                var publishedAt = new Date("{{article.publishedAt}}");
                var formattedPublishedAt = publishedAt.toISOString().slice(0, 16);
                document.getElementById('approve-publishedAt').value = formattedPublishedAt;
              </script>
            </div>
          </div>
          <div class="approve-r category">
            <label for="a-category">Category</label>
            <select class="form-select" id="a-category">
              {{#each categories}}
                  <option value="{{id}}">{{name}}</option>
              {{/each}}
            </select>
            <script>
              $('#a-category').val({{article.category.id}})
            </script>
          </div>
          <div class="approve-r title">
            <label for="a-title">Title</label>
            <input type="text" class="form-control" id="a-title" value={{article.title}}>
          </div>
          <div class="approve-r abstract">
            <label for="a-abstract">Abstract</label>
            <textarea type="text" class="form-control" id="a-abstract">{{article.summary}}</textarea>
          </div>
          <style>
            .apr-tag {
              display: inline-block;
              margin-right: 5px;
              background-color: #eee;
              padding: 2px 5px;
              border-radius: 2px;
            }
          </style>
          <div class="approve-r apr-tags">
            <label for="a-tags">tags:</label>
            {{#each article.labels}}
            <span class="apr-tag">{{name}} </span>
            {{/each}}
            <button id="add-tag-button" class="add-tag"><i class="fas fa-tag"></i> Add Tag</button>            
          </div>
        </div>
        <div class="approve-c image">
          <img src="{{article.bannerImageUrl}}" width="80%" height="" style="margin: auto" class="img-responsive">
        </div>
      </div>
    </div>
    <div class="approve action">
      <button type="button" class="btn btn-secondary btn-back">Trở lại</button>
      <button type="button" class="btn btn-success btn-publish">Xuất bản</button>
    </div>
  </div>

  <script>
    var site_list = false;
    var site_detail = true;
    var site_disapprove = false;
    var site_approve = true;
  </script>
  <script src="/mock/editor.js"></script>
  <script src="/js/editor.js"></script>
</body>