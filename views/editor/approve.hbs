                <option value="male">Male</option>
                <option value="other">Other</option>
              </select>
            </div>

            <div class="col-md-12">
              <h5>ACCOUNT INFO</h5>
            </div>

            <hr class="border border-2 border-dark m-0">

            <!-- Email Input -->
