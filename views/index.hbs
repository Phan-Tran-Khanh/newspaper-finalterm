<main class="container my-3 bg-light">
  <!-- Weekly News -->
  <div class="row">
    <div class="col-md-12">
      <h1 class="p-2 fw-bold">
        RISING THIS WEEK <i class="bi bi-graph-up-arrow text-primary"></i>
      </h1>
      <div id="carouselWeeklyNews" class="carousel carousel-dark slide" data-bs-ride="carousel">
        <ol class="carousel-indicators">
          <li data-bs-target="#carouselWeeklyNews" data-bs-slide-to="0" aria-label="News 1" class="active"></li>
          <li data-bs-target="#carouselWeeklyNews" data-bs-slide-to="1" aria-label="News 2"></li>
          <li data-bs-target="#carouselWeeklyNews" data-bs-slide-to="2" aria-label="News 3"></li>
          <li data-bs-target="#carouselWeeklyNews" data-bs-slide-to="3" aria-label="News 4"></li>
        </ol>
        <div class="carousel-inner">
          {{#each weeklyArticles}}
          <div class="carousel-item {{#if @first}} active {{/if}}">
            <div class="card">
              <div class="row g-0">
                <div class="col-md-7">
                  <img src="{{bannerImageUrl}}" class="d-block rounded-start banner">
                </div>
                <div class="col-md-5">
                  <div class="card-body">
                    <p class="card-text small text-muted">{{createdBy.penName}} - {{publishedAt}}</p>
                    <h6 class="card-subtitle text-muted">
                      <a href="/search?category={{category.name}}">
                        {{category.name}}
                      </a>
                    </h6>
                    <h5 class="card-title mb-2">
                      <a href="/article/{{slug}}">
                        {{title}}
                      </a>
                    </h5>
                    <p class="card-text small">
                      {{summary}}
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
  <!-- Weekly News -->

  <!-- Top 10 Categories -->
  <div class="row mt-2 g-2 overflow-auto flex-nowrap d-flex align-items-stretch">
    {{#each topArticles}}
    <div class="col-md-8">
      <div class="card">
        <div class="row g-0">
          <div class="col-md-5">
            <img src="{{bannerImageUrl}}" class="d-block rounded-start banner">
          </div>
          <div class="col-md-7 d-flex flex-column small">
            <div class="card-body">
              <h6 class="card-subtitle text-muted">
                <a href="/search?category={{category.name}}">
                  {{category.name}}
                </a>
              </h6>
              <h6 class="card-title">
                <a href="/article/{{slug}}">
                  {{title}}
                </a>
              </h6>
              <p class="card-text">
                {{summary}}
              </p>
            </div>
            <div class="card-footer bg-white">
              <p class="card-text small text-muted">{{createdBy.penName}} - {{publishedAt}}</p>
            </div>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
  <!-- Top 10 Categories -->

  <!-- All Category -->
  {{#each topArticlesByCategory}}
  <div class="row mt-5">
    <div class="col-md-12">
      <!-- Category Name -->
      <h2 class="bg-dark p-2">
        <a class="link-light" href="/search?category={{category.name}}">
          {{category.name}}
        </a>
      </h2>

      <!-- Latest News -->
      <div id="carouselLatestNews{{@index}}" class="carousel carousel-dark slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
          {{#each latest}}
          <button type="button" data-bs-target="#carouselLatestNews{{@../index}}" data-bs-slide-to="{{@index}}" {{#if
            @first}} class="active" {{/if}} aria-current="true" aria-label="News {{@index}}"></button>
          {{/each}}
        </div>
        <div class="carousel-inner">
          {{#each latest}}
          <div class="carousel-item {{#if @first}} active {{/if}}">
            <div class="card">
              <div class="row row-cols-2 g-0">
                <div>
                  <img src="{{bannerImageUrl}}" class="d-block rounded-start banner">
                </div>
                <div>
                  <div class="card-body">
                    <p class="card-text small text-muted">{{createdBy.penName}} - {{publishedAt}}</p>
                    <h6 class="card-subtitle text-muted">
                      <a href="/search?category={{category.name}}">
                        {{category.name}}
                      </a>
                    </h6>
                    <h5 class="card-title mb-2">
                      <a href="/article/{{slug}}">
                        {{title}}
                      </a>
                    </h5>
                    <p class="card-text small">
                      {{summary}}
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
          {{/each}}
        </div>
      </div>
      <!-- Latest News -->

      <!-- Most Popular -->
      <div class="mt-3">
        <h4 class="px-2">Trending now <i class="bi bi-fire text-danger"></i></h4>

        <div class="row d-flex flex-nowrap">
          {{#each mostViewed}}
          <div class="card w-25">
            <img class="card-img-top banner" src="{{bannerImageUrl}}">
            <div class="card-body small">
              <h6 class="card-title">
                <a href="/article/{{slug}}">
                  {{title}}
                </a>
              </h6>
              <h6 class="card-subtitle mb-2 text-muted">
                <a href="/search?category={{category.name}}">
                  {{category.name}}
                </a>
              </h6>
              <p class="card-text">
                {{summary}}
              </p>
              <p class="card-text small text-muted">{{createdBy.penName}} - {{publishedAt}}</p>
            </div>
          </div>
          {{/each}}
        </div>
      </div>
      <!-- Most Popular -->
    </div>
  </div>
  {{/each}}
  <!-- All Category -->
</main>