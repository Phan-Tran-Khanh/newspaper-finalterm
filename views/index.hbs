      <div class="card">
        <div class="row g-0">
          <div class="col-md-5">
            <img src="{{bannerImgUrl}}" class="d-block w-100 h-100 rounded-start" >
          </div>
          <div class="col-md-7 d-flex flex-column small">
            <div class="card-body">
              <h6 class="card-subtitle text-muted">
                <a href="/search?category={{category.slug}}">
                  {{category.name}}
                </a>
              </h6>
              <h6 class="card-title">
                <a href="/{{slug}}">
                  {{title}}
                </a>
              </h6>
              <p class="card-text">
                {{summary}}
              </p>
            </div>
            <div class="card-footer bg-white">
              <p class="card-text small text-muted">{{createdBy}} - {{publishedAt}}</p>
            </div>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
