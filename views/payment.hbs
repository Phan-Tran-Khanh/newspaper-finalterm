<main class="container py-5">
  <div class="row mb-4">
    <div class="col-lg-8 mx-auto text-center">
      <h1 class="fw-bold">Choose Payment Method</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8 mx-auto">
      <div class="card">
        <div class="card-header">
          <!-- Credit card form tabs -->
          <div class="bg-white shadow-sm pt-4 ps-2 pe-2 pb-2">
            <ul class="nav bg-light nav-pills rounded nav-fill mb-3" role="tablist">
              <li class="nav-item" role="presentation">
                <a class="nav-link active" id="credit-card-tab" data-bs-toggle="pill" href="#credit-card">
                  <i class="bi bi-credit-card"></i> Credit Card
                </a>
              </li>
              <li class="nav-item" role="presentation">
                <a class="nav-link" id="paypal-tab" data-bs-toggle="pill" href="#paypal">
                  <i class="bi bi-paypal"></i> Paypal
                </a>
              </li>
              <li class="nav-item" role="presentation">
                <a class="nav-link" id="net-banking-tab" data-bs-toggle="pill" href="#net-banking">
                  <i class="bi bi-phone"></i> Net Banking
                </a>
              </li>
            </ul>
          </div>
          <!-- Payment Method Forms -->
          <div class="tab-content">
            <!-- Credit Card-->
            <div id="credit-card" class="tab-pane fade show active pt-3">
              <form onsubmit="event.preventDefault()">
                <div class="form-group mb-3">
                  <label for="owner-name">
                    <h6 class="mb-0">Card Owner</h6>
                  </label>
                  <input type="text" id="owner-name" name="owner-name" placeholder="Card owner name" required
                    class="form-control">
                </div>
                <div class="form-group mb-3">
                  <label for="card-number">
                    <h6 class="mb-0">Card Number</h6>
                  </label>
                  <div class="input-group">
                    <input type="text" id="card-number" name="card-number" placeholder="Valid card number"
                      class="form-control" required>
                    <div class="input-group-text text-muted">
                      <i class="fa-brands fa-cc-visa mx-1"></i>
                      <i class="fa-brands fa-cc-mastercard mx-1"></i>
                      <i class="fa-brands fa-cc-amex mx-1"></i>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-sm-8">
                    <div class="form-group mb-3">
                      <label>
                        <span class="hidden-xs">
                          <h6 class="mb-0">Expiration Date</h6>
                        </span>
                      </label>
                      <div class="input-group">
                        <input type="number" placeholder="mm" name="" class="form-control" required>
                        <input type="number" placeholder="yy" name="" class="form-control" required>
                      </div>
                    </div>
                  </div>
                  <div class="col-sm-4">
                    <div class="form-group mb-3">
                      <label data-bs-toggle="tooltip" title="Three digit CV code on the back of your card">
                        <h6 class="mb-0">CVV <i class="bi bi-question-circle d-inline"></i>
                        </h6>
                      </label>
                      <input type="text" required class="form-control">
                    </div>
                  </div>
                </div>
                <div class="card-footer d-grid border-top-0 bg-light">
                  <button type="submit" class="btn btn-bloc shadow-sm">Confirm
                    Payment</button>
                </div>
              </form>
            </div>

            <!-- Credit Card-->

            <!-- Paypal -->
            <div id="paypal" class="tab-pane fade pt-3">
              <h6 class="mb-3">Select your PayPal account type</h6>
              <div class="form-group mb-3">
                <label class="form-check-label">
                  <input type="radio" name="optradio" class="form-check-input" checked> Domestic
                </label>
                <label class="form-check-label ms-4">
                  <input type="radio" name="optradio" class="form-check-input"> International
                </label>
              </div>
              <button type="submit" class="btn"><i class="bi bi-paypal me-2"></i> Log
                into my PayPal</button>
              <p class="text-muted small">Note: After clicking on the button, you will be directed to
                a
                secure gateway for payment.
                After completing the payment process, you will be redirected back to the website to
                view details of your order.
              </p>
            </div>
            <!-- Paypal -->

            <!-- Bank Transfer -->
            <div id="net-banking" class="tab-pane fade pt-3">
              <div class="form-group mb-3">
                <label for="select-banks">
                  <h6>Select Your Bank</h6>
                </label>
                <select class="form-select" id="select-banks">
                  <option value="" selected disabled>--Please select your Bank--</option>
                  <option value="Agribank">Agribank</option>
                  <option value="Sacombank">Sacombank</option>
                  <option value="Techcombank">Techcombank</option>
                  <option value="Vietinbank">Vietinbank</option>
                  <option value="BIDV">BIDV</option>
                </select>
              </div>
              <div class="form-group">
                <button type="submit" class="btn"><i class="fas fa-mobile-alt me-2"></i>
                  Proceed Payment</button>
              </div>
              <p class="text-muted small">Note: After clicking on the button, you will be directed to
                a secure gateway for payment. After completing the payment process, you will be
                redirected back to the website to view details of your order.</p>
            </div>
            <!-- Bank Transfer -->
          </div>
          <!-- Payment Method Forms -->
        </div>
      </div>
    </div>
  </div>
</main>